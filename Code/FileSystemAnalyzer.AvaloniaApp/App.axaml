<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="FileSystemAnalyzer.AvaloniaApp.App">
    <Application.Resources>
        <themes:BundledTheme BaseTheme="Dark" PrimaryColor="Cyan" SecondaryColor="Amber" />
        <Color x:Key="ErrorColor">#F23005</Color>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    </Application.Resources>
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml" />
        
        <Style Selector="TextBlock.GridText">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="16 0 0 0" />
        </Style>
        <Style Selector="TextBlock.Info">
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        </Style>
    </Application.Styles>
</Application>